@model Vidly.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2 class="text-uppercase">@Model.Name</h2>

<div class="list-group">
    <div class="list-group-item">
        <h4 class="list-group-item-heading">Membership Type</h4>
        <p class="list-group-item-text"> @Model.MembershipType.MemberShipName</p>
    </div>
  
   @if (Model.BirthDate != null)
   {
    <div class="list-group-item">
        <h4 class="list-group-item-heading">Date of birth</h4>
        <p class="list-group-item-text">@Html.DisplayFor(m => m.BirthDate)</p>
    </div>
    }
</div>
