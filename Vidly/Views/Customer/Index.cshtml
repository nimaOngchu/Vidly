@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
}<br/>
<h3>Customer</h3>
<br/>
@Html.ActionLink("Create User", "Create",null,new { @class= "btn-sm btn-primary", style = "text-decoration:none;" })
<br/>
<br />
<table class="table table-striped table-responsive table-bordered " style="font-size:16px;">
    <tr>
        <th>Customer</th>
        <th>Discount Rate</th>
    </tr>
    @foreach (var customer in Model)
    {
     
        <tr>
            <td class="text-capitalize">@Html.ActionLink(customer.Name,"Details","Customer",new { customer.Id}, null)</td>
            <td>@customer.MembershipType.MemberShipName</td>
        </tr>
    }
</table>

